<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ducosmo.creditbuddy.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Cadastros">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#abrirCadastroPessoas" text="Pessoas" />
                        <MenuItem mnemonicParsing="false" onAction="#abrirCadastroCartoes" text="Cartões" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Sobre" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <Label text="Bem-vindo ao Credit Buddy!" style="-fx-font-size: 24;" />
            <Label text="Use o menu 'Cadastros' para começar." />
        </VBox>
    </center>
</BorderPane>