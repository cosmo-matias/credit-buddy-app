<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ducosmo.creditbuddy.CartoesController">
    <center>
        <TableView fx:id="tabelaCartoes" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colunaNomeCartao" prefWidth="150.0" text="Nome do Cart찾o" />
                <TableColumn fx:id="colunaBandeira" prefWidth="120.0" text="Bandeira" />
                <TableColumn fx:id="colunaVencimento" prefWidth="100.0" text="Vencimento" />
                <TableColumn fx:id="colunaFechamento" prefWidth="100.0" text="Fechamento" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="220.0" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label text="Cadastro de Cart천es" style="-fx-font-weight: bold;" />

            <!-- Usaremos um GridPane para alinhar os r처tulos e os campos -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                </rowConstraints>

                <!-- Linha 0 -->
                <Label text="Nome:" GridPane.rowIndex="0" />
                <TextField fx:id="campoNomeCartao" promptText="Ex: Cart찾o Nubank" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Linha 1 -->
                <Label text="Bandeira:" GridPane.rowIndex="1" />
                <TextField fx:id="campoBandeira" promptText="Ex: Mastercard" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Linha 2 -->
                <Label text="Dia Vencimento:" GridPane.rowIndex="2" />
                <Spinner fx:id="spinnerVencimento" editable="true" min="1" max="31" initialValue="1" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <!-- Linha 3 -->
                <Label text="Dia Fechamento:" GridPane.rowIndex="3" />
                <Spinner fx:id="spinnerFechamento" editable="true" min="1" max="31" initialValue="1" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            </GridPane>

            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="botaoSalvar" mnemonicParsing="false" onAction="#onSalvar" text="Salvar" />
                <Button fx:id="botaoNovo" mnemonicParsing="false" onAction="#onNovo" text="Novo" />
            </HBox>

            <Button fx:id="botaoExcluir" mnemonicParsing="false" onAction="#onExcluir" text="Excluir Selecionado" />

        </VBox>
    </right>
</BorderPane>